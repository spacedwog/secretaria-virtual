{
  "compilerOptions": {
    "type": "module",
    "target": "es6", 
    "module": "commonjs",
    "lib": ["esnext"], 
    "allowJs": false, 
    "strict": true, 
    "noImplicitAny": true, 
    "strictNullChecks": true, 
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true, 
    "moduleResolution": "node",
    "resolveJsonModule": true, 
    "isolatedModules": true,
    "esModuleInterop": true, 
    "skipLibCheck": true, 
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "outDir": "dist",
    "rootDir": "Cloud-dev",
    "scripts": {
      "start": "node Cloud-dev/server.js"
    }
  },
  "include": ["Cloud-dev"],
  "exclude": ["node_modules", "**/__tests__/*"]
}