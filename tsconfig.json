{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2020",
    "allowJs": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowImportingTsExtensions": true,
    "emitDeclarationOnly": true,
    "composite": true,
    "baseUrl": "./",
    "rootDir": "./",
    "outDir": "dist",
    "jsx": "react"
  },
  "ts-node": {
    "esm": true,
  },
  "exclude": [
    "node_modules",
    "jest.config.js",
    "**/__tests__/*",
    "public",
    "dist"
  ],
  "include": ["Cloud-dev/**/*.ts"]
}
